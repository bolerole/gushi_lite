/* pages/find/index.wxss */
.page{
    padding-top: 0;
    overflow-y: scroll;
}
image{
    width: 35px;
    height: 35px;
}
.weui-media-box:before {
    content: " ";
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    height: 1px;
    border-top: 1rpx solid #E5E5E5;
    color: #E5E5E5;
}
.notices{
    color:#ccc;
    font-size: 15px;
}
.content-section{
    background-color:#f6f7f8;
    margin:5px;
    border-radius:8px;
    padding-bottom: 0
}
.pins-content{
    width: 100%;
    overflow: hidden;
}
.pin-content{
    padding: 5px;
    color: #333;
    font-size: 14px;
    display: block;
}

.pin-time{
    float: none;
    padding-left: 10px;
    font-size: 12px;
}
.right-top{
    margin-top:0;
}
.bottom-section{
    margin-top: 10px;
    padding: 0 10px;
}
.bottom-section image{
    width: 20px;
    height: 20px;
    position: absolute;
    left: 0;
}
.bottom-section .weui-flex__item{
    font-size: 12px;
    line-height: 20px;
    position: relative;
    padding-left:23px;
}
.pinSection{
    padding-bottom: 8px
}
.pin-item{
    line-height: 22px;
    padding: 5px 15px;
}
.pin-item .pin-title{
    /* display: inline-block; */
    font-weight: bold;
    width: auto;
}
.pin-item .pin-content{
    /* display: inline-block; */
    padding-left: 0;
    line-height: 22px;
    /* width:auto; */
    text-overflow:ellipsis;
    -webkit-line-clamp: 5;
}
.pin-section{
    margin-top: 0;
    background-color: #fff;
}
page{
    position: relative;
    min-height: 100%;
}
.pin-avatar{
    padding-right: 10px;
}
.pin-review{
    background: #f6f7f8;
    position: fixed;
    left: 0;
    width: 100%;
}
.pin-review .weui-cell{
    padding: 5px 15px;
    align-items: inherit;
}
.pin-review .weui-cell__bd{
    padding-right: 10px;
}
.pin-review input{
    background-color: #fff;
    padding: 2px 0 2px 5px;
    font-size: 14px;
    border-radius:6px;
}
.review-content .weui-media-box{
    padding: 10px 10px;
}
.review-content .pin-author,.review-content .pin-time{
    display: inline-block;
}
.review-content .pin-time{
    float: right;
}
.review-count{
    color: #333;
    font-size: 14px;
}
.review-count-text{
    color: #cecece;
    font-size: 14px;
}
.review-count-users{
    padding-left: 10px;
    line-height: 20px;
}
.review-count-users image{
    border-radius:100%;
    /* border-color:#ddd; */
    /* border-width:1px;  */
    margin-left: -8px;
    /* z-index: 1; */
}
.review-count-users image:first-child{
    margin-left: 0;
    /* z-index: 2; */
}