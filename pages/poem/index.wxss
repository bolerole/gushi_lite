/*
* filter section
*/

.filter-section {
    background-color: white;
    height: auto;
    padding: 5px 0 10px 10px;
    border-bottom: 1px solid #f4f4f4;
    border-top: 1px solid #f4f4f4;
    overflow: hidden;
    white-space: nowrap;
}

.filter-section:last-child {
    padding-bottom: 5px;
}

.filter-section .h4 {
    color: #4c1f2c;
    font-size: 36rpx;
    line-height: 38rpxpx;
    background: #fff;
    border: none;
    margin-right:0;
    padding-right:0;
    margin-bottom: 10px;
    margin-top: 10px;
}

.filter-section scroll-view {
    width: 100%;
    overflow-x: auto;
}

.filter-item {
    background: #f7f7f7;
    color: #fff;
    font-size: 32rpx;
    padding: 4px 10px;
    margin-bottom: 0;
    display: inline-block;
    border-radius: 4px;
    position: relative;
    margin-right: 8px;
    writing-mode:vertical-rl;
    letter-spacing: 2px;
    /* display: table-cell; */
    height: 51px;
    text-align: center;
}

.filter-item:last-child {
    margin-right: 20px;
}

.filter-item.pressed {
    color: white;
    background-color: #337ab7!important;
    font-weight: 500;
}