.canvas-content{
    position:fixed;
    top:0;
    left:0;
    width:100%;
    height:100%;
    background-color: #000;
    /*opacity: 0.3;*/
    z-index: 99;
}
canvas{
    padding-top: 0;
    transform-origin: 0 0;
    -webkit-transform-origin: 0 0;
    /* display: none; */
}
.save_image{
    position: fixed;
    bottom: 20px;
    /* left: 30px; */
    /* margin-right: -70px; */
    background: #43ce7b;
    color: #fff;
    border-radius:8px;
    padding: 6px 12px;
    z-index: 9999
}
.save_image:first-child{
    left: 30px;
}
.save_image.not{
    right: 30px;
}
.canvas{
    /*visibility:hidden;*/
    overflow:hidden;
    width:100%;
    height:100%;
    clear: both;
}
.canvas-image{
    z-index:99;
    position:absolute;
    top:15px;
    left:15px;
}
.canvas-bottom .wechat{
    position: fixed;
    bottom: 20px;
    /*background: #fff;*/
    /*color: #fff;*/
    border-radius:8px;
    padding: 4px 10px;
    z-index: 9999;
    left: 40px;
    border: none;
    line-height: 0;
}
.canvas-bottom image{
    width: 35px;
    height: 35px;
}
.canvas-bottom .quan{
    left: 85px;
}