/* pages/poem/sentence/index.wxss */
.page.list{
    width: 100%;
    background-color: #ebebeb;
    padding-top: 0;
}
.home-content{
    padding: 0
}
.navigator-hover{
    background-color: #fff;
    color: #337ab7;
}
.weui-cells{
  background-color: inherit;
  /* padding-top: 5px; */
}
.poem-item{
  display: block;
  background-color: #fff;
  padding:8px 10px;
  margin:5px 0;
  /* border-radius: 5px; */
  border:none;
  position:relative;
  -webkit-box-align:center;
  -webkit-align-items:center;
  align-items:center;
}
.poem-item view{
    width:100%;
    display: block;
    text-overflow:ellipsis;
    white-space:nowrap;
    overflow:hidden;
}
.poem-item .poem-title{
    color: #333;
    font-size: 14px;
}
.poem-item .poem-author{
    color: #337ab7;
    font-size: 12px;
    /* padding: 5px 0; */
    text-align: right;
    margin-top: 5px;
}
.poem-item .poem-content{
    font-size: 14px;
    color: #454545;
}
.nav-list{
     background: #fff; 
    width: 100%;
}
.nav-list .weui-flex__item{
    text-align: center;
    font-size: 12px;
    line-height: 20px;
    padding:8px 0;
    color: #666;
}
.nav-list image{
    width: 20px;
    height: 20px;
    vertical-align:middle;
}
.nav-list .left{
  min-width: 60px;
  text-align: right;
}
.nav-list .right{
  text-align: left;
  color: #337ab7;
}


.searchbar-result{
    margin-top: 0;
    font-size: 14px;
}
.searchbar-result:before{
    display: none;
}
.weui-search-bar{
    border: none;
    width: 100%;
    background-color: #fff;
}
.weui-search-bar__text{
    letter-spacing:2px;
    font-size: 12px;
}

/*
* filter section
*/

.filter-section {
    background-color: white;
    height: auto;
    padding: 3px 0 5px;
    border-bottom: 1px solid #f4f4f4;
    border-top: 1px solid #f4f4f4;
    overflow: hidden;
    white-space: nowrap;
}

.filter-section:last-child {
    padding-bottom: 5px;
}

.filter-section .h4 {
    font-size: 14px;
    line-height: 25px;
    background: #fff;
    border: none;
    margin-right:0;
    padding-right:0;
}

.filter-section scroll-view {
    width: 100%;
    overflow-x: auto;
    padding-left: 10px;
}

.filter-item {
    background: #f7f7f7;
    color: #24262a;
    font-size: 12px;
    padding: 2px 6px;
    margin-bottom: 0;
    display: inline-block;
    border-radius: 4px;
    position: relative;
    margin-right: 8px;
    border: 1px solid #f7f7f7;
}

.filter-item:last-child {
    margin-right: 20px;
}

.filter-item.pressed {
    color: white;
    background-color: #337ab7;
    border: 1px solid #337ab7;
    font-weight: 500;
}